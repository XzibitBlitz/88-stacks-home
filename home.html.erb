    <!-- Link Swiper's CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@9/swiper-bundle.min.css" />
    <title>88stacks</title>
    <style>
        .swiper {
            width: 100%;
            height: 100%;
        }

        .swiper-slide {
            text-align: center;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        div.swiper-slide:nth-child(1) {
            color: #dc2626;
        }
        
        div.swiper-slide:nth-child(2) {
            color: #ca8a04;
        }
        
        div.swiper-slide:nth-child(3) {
            color: #2563eb;
        }
        
        div.swiper-slide:nth-child(4) {
            color: #0891b2;
        }

        .swiper-slide span{
            padding-bottom: 55px;
        }

        .swiper-pagination {
            bottom: 25%;
        }

        .swiper-pagination-bullet {
            height: 14px;
            width: 14px;
        }

        .swiper-pagination-bullet-active:nth-child(1) {
            background-color: #dc2626;
        }
        
        .swiper-pagination-bullet-active:nth-child(2) {
            background-color: #2563eb;
        }
        
        .swiper-pagination-bullet-active:nth-child(3) {
            background-color: #ca8a04;
        }
        
        .swiper-pagination-bullet-active:nth-child(4) {
            background-color: #0891b2;
        }
    </style>

<div class="bg-white dark:bg-gray-950 dark:text-white -z-20">
    <div class="relative h-screen overflow-hidden">
        <div class="flex text-center justify-center items-center text-[#000000] xl:mx-[101.500px] 2xl:mx-[198px]">
            <div class="absolute inset-0 bottom-0 pt-[20px] flex justify-center">
                <div class="flex flex-col items-center">
                    <div class="relative text-4xl mt-4 md:mt-8 md:mt-0 md:text-6xl font-extrabold text-center leading-snug">
                        <div class="text-black">Imagine your next</div>
                        <div class="absolute swiper mySwiper">
                            <div class="swiper-wrapper">
                                <%# @marketing_collections.each_with_index do |x,i| %>
                                    <div class="swiper-slide -mt-[20px] md:-mt-[10px]">interior design</div>
                                    <div class="swiper-slide -mt-[20px] md:-mt-[10px]">test</div>
                                    <div class="swiper-slide -mt-[20px] md:-mt-[10px]">test 2</div>
                                <%# end %>
                            </div>
                            <div class="swiper-pagination"></div>
                        </div>
                    </div>
                    <div class="flex text-[18px] md:text-2xl mt-[45px] md:mt-[50px] text-gray-600 dark:text-gray-400 text-center leading-normal w-[310px] sm:w-[420px] md:w-[600px]">
                        Use our powerful AI technology to generate any type of image you can think of. Easily and in a matter of seconds.
                    </div>
                </div>
                <div class="absolute inset-0 -bottom-[60%] sm:-bottom-[150%] md:-bottom-[135%] lg:-bottom-[175%] xl:-bottom-[135%] 2xl:-bottom-[125%] w-[200%] xl:w-full flex justify-center transform -translate-x-1/4 xl:-translate-x-0">
                    <div class="absolute swiper mySwiper">
                        <div class="swiper-wrapper">
                            <% @marketing_collections.each_with_index do |x,i| %>
                                <div class="swiper-slide">
                                    <div class="absolute grid grid-cols-7 gap-4 shrink-0">
                                        <% x.invokes.each_slice(3) do |invokes| %>
                                            <div class="[&:nth-child(7n-5)]:translate-y-8 [&:nth-child(7n-4)]:translate-y-24 [&:nth-child(7n-3)]:translate-y-40 [&:nth-child(7n-2)]:translate-y-24 [&:nth-child(7n-1)]:translate-y-8
                                                        md:[&:nth-child(7n-5)]:translate-y-10 md:[&:nth-child(7n-4)]:translate-y-26 md:[&:nth-child(7n-3)]:translate-y-60 md:[&:nth-child(7n-2)]:translate-y-24 md:[&:nth-child(7n-1)]:translate-y-10">
                                                <div class="flex flex-col gap-4 justify-center items-center">
                                                    <% invokes.each_with_index do |invoke,ii| %>
                                                        <div class="bg-gray-100 dark:bg-gray-900 drop-shadow-[0_35px_35px_rgba(0,0,0,0.25)] rounded-2xl overflow-hidden">
                                                            <img class="max-h-[512px] w-auto object-cover" loading="eager" src="<%= invoke.medium_url %>" />
                                                        </div>
                                                    <% end %>
                                                </div>
                                            </div>
                                        <% end %>
                                    </div>
                                </div>
                            <% end %>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="absolute inset-0 bottom-0 w-full flex justify-center overflow-hidden">
        <div class="fixed bottom-0 left-0 right-0 z-30 bg-gradient-to-b from-white/0 dark:from-black/0 to-white dark:to-black p-8 flex items-center">
            <div class="mx-auto">
                <a class="flex group items-center cursor-pointer mt-5 rounded-full border border-transparent bg-black dark:bg-white py-2 px-4 text-lg font-medium text-white dark:text-black hover:bg-gray-800 dark:hover:bg-gray-100" href="/start">
                    Try it yourself
                    <svg class="mt-0.5 ml-2 -mr-1 stroke-white dark:stroke-black stroke-2" fill="none" width="12" height="12" viewBox="0 0 10 10" aria-hidden="true">
                        <path class="opacity-0 transition group-hover:opacity-100" d="M0 5h7"></path>
                        <path class="transition group-hover:translate-x-[3px]" d="M1 1l4 4-4 4"></path>
                    </svg>
                </a>
            </div>
        </div>
        <div class="fixed bottom-4 right-4 hidden lg:block z-30">
            <a target="_blank" class="px-2 py-1 rounded-full bg-white dark:bg-gray-900 hover:bg-red-50 dark:hover:bg-red-900 hover:text-red-800 dark:hover:text-white drop-shadow-xl flex items-center" href="mailto:support@88stacks.com">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-7 h-7 text-red-500">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M16.712 4.33a9.027 9.027 0 011.652 1.306c.51.51.944 1.064 1.306 1.652M16.712 4.33l-3.448 4.138m3.448-4.138a9.014 9.014 0 00-9.424 0M19.67 7.288l-4.138 3.448m4.138-3.448a9.014 9.014 0 010 9.424m-4.138-5.976a3.736 3.736 0 00-.88-1.388 3.737 3.737 0 00-1.388-.88m2.268 2.268a3.765 3.765 0 010 2.528m-2.268-4.796a3.765 3.765 0 00-2.528 0m4.796 4.796c-.181.506-.475.982-.88 1.388a3.736 3.736 0 01-1.388.88m2.268-2.268l4.138 3.448m0 0a9.027 9.027 0 01-1.306 1.652c-.51.51-1.064.944-1.652 1.306m0 0l-3.448-4.138m3.448 4.138a9.014 9.014 0 01-9.424 0m5.976-4.138a3.765 3.765 0 01-2.528 0m0 0a3.736 3.736 0 01-1.388-.88 3.737 3.737 0 01-.88-1.388m2.268 2.268L7.288 19.67m0 0a9.024 9.024 0 01-1.652-1.306 9.027 9.027 0 01-1.306-1.652m0 0l4.138-3.448M4.33 16.712a9.014 9.014 0 010-9.424m4.138 5.976a3.765 3.765 0 010-2.528m0 0c.181-.506.475-.982.88-1.388a3.736 3.736 0 011.388-.88m-2.268 2.268L4.33 7.288m6.406 1.18L7.288 4.33m0 0a9.024 9.024 0 00-1.652 1.306A9.025 9.025 0 004.33 7.288" />
                </svg>
                <div class="text-sm font-medium mr-1 w-full text-center relative z-50">
                    Email us
                </div>
            </a>
        </div>
    </div>

    <!-- Swiper JS -->
    <script src="https://cdn.jsdelivr.net/npm/swiper@9/swiper-bundle.min.js"></script>

    <!-- Initialize Swiper -->
    <script>
        var swiper = new Swiper(".mySwiper", {
            slidesPerView: 1,
            spaceBetween: 30,
            effect: "fade",
            loop: true,
            autoplay: {
                delay: 5000,
                disableOnInteraction: false,
            },
            pagination: {
                el: ".swiper-pagination",
                clickable: true,
            },
        });
    </script>
</div>
